            </Rectangle.Stroke>
        </Rectangle>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="193" Margin="10,10,0,0" VerticalAlignment="Top" Width="279" Source="PHOTO\field\阿森纳1.jpg" Stretch="Fill"/>
        <Image x:Name="image2" HorizontalAlignment="Left" Height="193" Margin="10,10,0,0" VerticalAlignment="Top" Width="279" Source="PHOTO\field\埃弗顿2.jpg" Stretch="Fill"/>
