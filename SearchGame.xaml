                <GridView>
                    <GridViewColumn Header="时间" Width="120" DisplayMemberBinding="{Binding Path=gameTimeShow}" />
                    <GridViewColumn Header="主场球队" Width="150" DisplayMemberBinding="{Binding Path=gameHost}" />
                    <GridViewColumn Header="客场球队" Width="150" DisplayMemberBinding="{Binding Path=gameGuest}" />
                    <GridViewColumn Header="比分" Width="80" DisplayMemberBinding="{Binding Path=gameScore}" />
                </GridView>
            </ListView.View>
        </ListView>
